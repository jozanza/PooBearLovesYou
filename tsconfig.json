{
  "compilerOptions": {
    "module": "CommonJS",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "downlevelIteration": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".cache"]
}